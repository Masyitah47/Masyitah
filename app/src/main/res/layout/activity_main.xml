<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="60dp"
    tools:context="com.Masyitah.quiz.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perhitungan Nilai"
        android:layout_gravity="center"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nilai Tugas"
        android:id="@+id/Nilai_Tugas"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nilai Quiz"
        android:id="@+id/Nilai_Quiz"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nilai UTS"
        android:id="@+id/Nilai_UTS"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nilai UAS"
        android:id="@+id/Nilai_UAS"
        android:inputType="number"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/Proses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proses" />

        <Button
            android:id="@+id/Bersih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Proses"
            android:text="Bersih" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="HASIL"
        android:textSize="20sp" />


</LinearLayout>